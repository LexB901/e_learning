                        Width="75"
                        Height="20"
                        Canvas.Left="213"
                        Canvas.Top="39"
                        Margin="147,42,0,0"
                        Click="HardQuestion"
                        RenderTransformOrigin="0.941,0.6"
                        IsDefault="true"/>
                <Label Content="x"
                       HorizontalAlignment="Left"
                       Margin="36,0,0,0"
