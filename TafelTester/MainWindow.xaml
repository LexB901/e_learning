                                                             Text="2" /></TextBlock>
                <TextBlock x:Name="HardScore"
                           HorizontalAlignment="Left"
                           Margin="87,0,0,0"
                           TextWrapping="Wrap"
                           VerticalAlignment="Top"
                           Width="63"><Run Language="nl-nl"
                                           Text="Score: 0" /></TextBlock>
            </Grid>
        </Grid>
        <Button x:Name="ButtonBack"
                Content="Terug"
                HorizontalAlignment="Left"
                Margin="22,22,0,0"
                VerticalAlignment="Top"
                Visibility="Collapsed"
                Click="ButtonBack_Click" />
    </Grid>
</Window>
