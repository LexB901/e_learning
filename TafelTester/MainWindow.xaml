                           Width="21"><Run Language="nl-nl"
                                           Text="Num1" /></TextBlock>
                <TextBlock x:Name="NormalNum2"
                           HorizontalAlignment="Left"
                           Margin="59,0,0,0"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"
                           Width="21"><Run Text="Num" /><Run Language="nl-nl"
                                                             Text="2" /></TextBlock>
                <TextBlock x:Name="NormalScore"
                           HorizontalAlignment="Left"
                           Margin="87,0,0,0"
                           TextWrapping="Wrap"
                           VerticalAlignment="Top"
                           Width="63"><Run Language="nl-nl"
                                           Text="Score: 0" /></TextBlock>
            </Grid>
        </Grid>
        <Grid x:Name="QuestionHardGrid"
              HorizontalAlignment="Center"
              Height="136"
              Margin="0,118,0,0"
              VerticalAlignment="Top"
              Width="336"
              Visibility="Collapsed">
            <Grid x:Name="QuestionHard"
                  Height="100"
                  Margin="54,18,54,18"
                  Visibility="Visible">
                <Button x:Name="CheckHard"
                        Content="Nakijken"
                        HorizontalAlignment="Left"
